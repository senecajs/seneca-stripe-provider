{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["test", "dist", "node_modules"]
}
